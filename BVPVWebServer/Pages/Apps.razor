@page "/apps"

@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage _sessionStore

@inject StateService _stateService
@inject NavigationManager _navMgr

@{
    if (_stateService is {IsLoggedIn: false })
    {
        _navMgr.NavigateTo("/");
    }
    else
    {
        <PageTitle>Functions</PageTitle>

        <MudText Typo="Typo.h4" Align="Align.Center">Function Maintenance</MudText>
    }
}



@code {
    protected override async Task OnInitializedAsync()
    {
        var result = await _sessionStore.GetAsync<string>("User");
        if (result.Value is not {Length: > 1 }) _navMgr.NavigateTo("/");
    }
}